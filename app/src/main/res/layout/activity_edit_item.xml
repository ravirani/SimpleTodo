<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Item:"
        android:id="@+id/titleView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="25sp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:id="@+id/itemEditTextInput"
        android:singleLine="true"
        android:text="ToDoItem Text"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:layout_below="@+id/titleView"
        android:layout_alignRight="@+id/titleView"
        android:layout_alignLeft="@+id/titleView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Due Date"
        android:fontFamily="sans-serif-light"
        android:onClick="showDatePicker"
        android:id="@+id/dueDateButton"
        android:layout_marginTop="10dp"
        android:background="#00000000"
        android:gravity="left"
        android:padding="5dp"
        android:layout_below="@+id/itemEditTextInput"
        android:layout_alignRight="@+id/titleView"
        android:layout_alignLeft="@+id/titleView" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:onClick="saveTodoItem"
        android:id="@+id/SaveToDoButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dueDateButton"
        android:layout_marginTop="20dp" />

</RelativeLayout>